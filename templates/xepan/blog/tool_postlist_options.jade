						tr.xepan-tool-option
							td.xepan-tool-option-title Description
							td.xepan-tool-option-value
								select#show_description(data-attr='show_description' data-defaultvalue="true")
									option(value="true") Yes
									option(value="false") No
						tr.xepan-tool-option
							td.xepan-tool-option-title Paginator
							td.xepan-tool-option-value 
								select#show_paginator(data-attr='show_paginator')
									option(value="true") Yes
									option(value="false") No
						tr.xepan-tool-option
							td.xepan-tool-option-title Set By Order
							td.xepan-tool-option-value
								select#set_by_order(data-attr='set_by_order' data-defaultvalue="order_by_id")
