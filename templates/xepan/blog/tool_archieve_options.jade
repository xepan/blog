.xepan-tool-options(id='{$_name}' style="display:none" for-xepan-component='xepan/blog/Tool_Archieve')
	h3 Blog Archieve Options
	.xepan-tool-option
		.xepan-tool-option-title Show Month
		.xepan-tool-option-value 
			select#show_month(data-attr='show_month')
				option true																					
				option false
	.xepan-tool-option
		.xepan-tool-option-title Month's Blog Page Url
		.xepan-tool-option-value 
			input#redirect_page_url(data-attr='redirect_page_url')			
																																																
	script.
		$('\#{$_name} [data-attr]').on('change',function(){
			$(current_selected_component).attr($(this).data('attr'),$(this).val());
		});

		$('\#{$_name}').on('show',function(event){
			$('\#{$_name} [data-attr]').each(function(index,value){
				$(this).val($(current_selected_component).attr($(this).data('attr')));				
			});
		})